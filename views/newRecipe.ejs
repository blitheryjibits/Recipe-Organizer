
<form action="/add" method="POST" class="space-y-6 bg-white p-8 rounded-lg shadow max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-lime-700">Add a New Recipe</h1>

  <!-- Recipe Name -->
  <div>
    <label for="recipe-name" class="block text-sm font-medium text-gray-700 mb-1">Recipe Name</label>
    <input
      type="text"
      name="recipe-name"
      id="recipe-name"
      required
      class="w-full border border-lime-300 px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-400"
    />
  </div>

  <!-- Description -->
  <div>
    <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
    <textarea
      name="description"
      id="description"
      rows="4"
      required
      class="w-full border border-lime-300 px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-400"
    ></textarea>
  </div>

  <!-- Ingredients -->
  <div>
    <label for="ingredients" class="block text-sm font-medium text-gray-700 mb-1">Ingredients (comma-separated)</label>
    <input
      type="text"
      name="ingredients"
      id="ingredients"
      required
      class="w-full border border-lime-300 px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-400"
    />
  </div>

<!-- categories -->
<div>
    <label for="categories" class="block text-sm font-medium text-gray-700 mb-1">Categories (comma-separated)</label>
    <input
      type="text"
      name="categories"
      id="categories"
      required
      class="w-full border border-lime-300 px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-400"
    />
  </div>

  <!-- Submit Button -->
  <button
    type="submit"
    class="bg-lime-500 hover:bg-lime-600 text-white font-semibold px-6 py-2 rounded-md transition"
  >
    Save Recipe
  </button>
</form>
