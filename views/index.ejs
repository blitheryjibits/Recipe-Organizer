    <form action="/search" method="GET" class="flex items-center mb-8">
        <input
            type="text"
            name="q"
            placeholder="Search recipes..."
            class="flex-1 px-4 py-2 rounded-l-lg border border-lime-300 focus:outline-none focus:ring-2 focus:ring-lime-400"
        />
        <button
            type="submit"
            class="bg-lime-500 hover:bg-lime-600 text-white px-6 py-2 rounded-r-lg font-semibold transition"
        >
            Search
        </button>
    </form>

<section>
    <h2 class="text-2xl font-bold text-amber-700 mb-4">Categories</h2>
    <ul class="grid grid-cols-2 gap-4">
        <% categories.forEach(category => { %>
            <li>
                <a href="/category/<%= category %>" 
                    class="block bg-white rounded-lg shadow hover:shadow-lg p-4 text-center text-lime-700 font-medium hover:bg-lime-50 transition"
                    >
                    <%= category %>
                </a>
            </li>
            <% }) %>
    </ul>
</section>

