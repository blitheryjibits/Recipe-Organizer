
<form action="/auth/signin" method="POST" class="space-y-6 bg-white p-8 rounded-lg shadow max-w-md mx-auto mt-12">
  <% if (typeof error !== 'undefined') { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 text-center">
      <p class="text-sm font-semibold"><%= error %></p>
    </div>
  <% } %>
  
    <h1 class="text-3xl font-bold text-lime-700 text-center">Sign In</h1>

  <!-- Email -->
  <div>
    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email address</label>
    <input
      type="email"
      name="email"
      id="email"
      required
      class="w-full border border-lime-300 px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-400"
    />
  </div>

  <!-- Password -->
  <div>
    <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
    <input
      type="password"
      name="password"
      id="password"
      required
      class="w-full border border-lime-300 px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-400"
    />
  </div>

  <!-- Submit -->
  <button
    type="submit"
    class="bg-lime-500 hover:bg-lime-600 text-white font-semibold px-6 py-2 rounded-md w-full transition"
  >
    Sign In
  </button>

  <!-- Don't have an account? -->
  <p class="text-sm text-gray-500 text-center">
    Don't have an account?
    <a href="/auth/signup" class="text-lime-600 hover:underline">Create one</a>
  </p>
</form>
