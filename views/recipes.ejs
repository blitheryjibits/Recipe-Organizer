
    <div class="max-w-3xl mx-auto py-16 px-4">
      <header class="mb-10 text-center">
        <h1 class="text-4xl font-extrabold text-lime-700 mb-2"><%= category %> Recipes</h1>
        <p class="text-lg text-gray-600">Explore delicious <%= category %> dishes curated just for you.</p>
      </header>

      <section>
        <% if (recipes.length > 0) { %>
            <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <% recipes.forEach(recipe => { %>
                    <li class="bg-white rounded-lg shadow hover:shadow-lg transition w-full max-w-md mx-auto px-6 py-4 min-h-[8rem]">
                        <div px-6 py-4>
                            <h2 class="text-2xl font-semibold text-lime-800 mb-2"><%= recipe.name %></h2>
                            <p class="text-gray-700"><%= recipe.description %></p>
                        </div>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
          <p class="text-center text-gray-500 text-lg">No recipes found in this category yet.</p>
        <% } %>
      </section>
    </div>
