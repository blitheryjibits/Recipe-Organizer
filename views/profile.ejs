
  
  <div class="container mx-auto py-8">
    <h1 class="text-3xl font-bold text-lime-700 mb-4">Welcome, <%= username %> ðŸ‘‹</h1>

    <h2 class="text-xl font-semibold mb-2">Your Recipes</h2>

    <% if (recipes && recipes.length > 0) { %>
      <ul class="space-y-4">
        <% recipes.forEach(recipe => { %>
          <li class="bg-white rounded shadow p-4 flex justify-between items-center">
            <div>
              <h3 class="text-lg font-medium text-gray-800"><%= recipe.name %></h3>
              <p class="text-sm text-gray-500"><%= recipe.description %></p>
              <p class="text-sm text-gray-500"><%= recipe.categories.join(', ') %></p>
            </div>
            <div class="flex space-x-2 gap-4 content-center items-center">
              <a href="/recipes/<%= recipe.id %>/edit" class="px-3 py-1 bg-yellow-400 text-blue text-sm rounded hover:bg-yellow-500">Edit</a>
              <form action="/recipes/<%= recipe.id %>/delete" method="POST">
                <button type="submit" class="bg-red-500 text-red-500 text-sm rounded hover:bg-red-600 cursor-pointer">Delete</button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p class="text-gray-600">You havenâ€™t added any recipes yet.</p>
      <a href="/recipes/new" class="mt-2 inline-block text-lime-700 hover:underline">Add your first recipe</a>
    <% } %>
  </div>


